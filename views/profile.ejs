<!doctype html>
<html>
<head>
    <title>Authenticator</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="well">
            <h3><span class="fa fa-laptop"></span> Local</h3>
            <table>
              <tr>
                <td>title</td>
                <td>Creation date</td>
                <td>Update date</td>
                <td>Comment count</td>
                <td></td>
                <td></td>
              </tr>
            <% for(var x in  posts) {%>
              <tr>
               <td><%= posts[x]['title'] %></td>
               <td><%= posts[x]['creation_date'] %></td>
               <td><%= posts[x]['update_date'] %></td>
               <td><%= posts[x]['comment_count'] %></td>
               <td><a href="/delete/<%= posts[x]['id'] %>" /> delete </td>
               <td><a href="/post/<%= posts[x]['id'] %>" /> edit </td>
              </tr>
              <tr>
                <td colspan="6">
                  Comments ----------------------
                </td>
              </tr>
              <% for(var l in  posts[x].comments) {%>
              <tr>
                <td colspan="2">
                  <%= posts[x].comments[l].body  %>
                </td>
                <td colspan="2">
                  <%= posts[x].comments[l].date %>
                </td>
                <td colspan="2">
                  <%= posts[x].comments[l].user %>
                </td>
              </tr>
              <% } %>

           <% } %>
         </table>
        <a href="/post"> Create post </a> 
        </div>

</div>
</body>
</html>
