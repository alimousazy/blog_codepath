<!doctype html>
<html>
<head>
    <title>Authenticator</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Sign up</h1>

    <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form id="loginForm" action="signup" method="post">
        <div class="form-group">
            <label>User name</label>
            <input type="input" class="form-control" required name="u_name">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" required name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required>
        </div>
        <div class="form-group">
            <label>Blog name</label>
            <input type="input" class="form-control" name="b_name">
        </div>
        <div class="form-group">
            <label>Blog Description</label>
            <input type="input" class="form-control" name="b_desc">
        </div>
        <button type="submit" class="btn btn-warning btn-lg" name="signup">Signup</button>
    </form>
    <hr>
</div>
</div>
</body>
</html>
